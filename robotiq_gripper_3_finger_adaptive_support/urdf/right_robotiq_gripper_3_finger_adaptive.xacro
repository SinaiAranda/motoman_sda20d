<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="right_robotiq_gripper_3_finger_adaptive">
  <link name="right_gripper_base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://robotiq_gripper_3_finger_adaptive_support/meshes/gripper_base_link.STL" />
      </geometry>
      <material name="">
        <color rgba="0.10196 0.10196 0.10196 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://robotiq_gripper_3_finger_adaptive_support/meshes/gripper_base_link.STL" />
      </geometry>
    </collision>
  </link>

  <xacro:macro name="right_gripper_finger_link" params="finger_name link_name type xyz rpy parent axis lower upper" >
  <link name="right_gripper_finger_link_${finger_name}_${link_name}">
