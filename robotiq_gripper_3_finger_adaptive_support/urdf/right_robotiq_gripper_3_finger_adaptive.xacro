      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://robotiq_gripper_3_finger_adaptive_support/meshes/gripper_finger_link_${link_name}.STL" />
      </geometry>
    </collision>
  </link>
  <joint name="right_gripper_finger_joint_${finger_name}_${link_name}" type="${type}">
    <origin xyz="${xyz}" rpy="${rpy}" />
    <parent link="${parent}" />
    <child link="right_gripper_finger_link_${finger_name}_${link_name}" />
    <axis xyz="${axis}" />
    <limit lower="${lower}" upper="${upper}" effort="1000"
      velocity="${upper}" />
  </joint>
  </xacro:macro>

